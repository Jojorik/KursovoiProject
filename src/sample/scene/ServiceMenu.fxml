<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.control.ScrollPane?>
<?import javafx.scene.control.TextField?>
<?import javafx.scene.layout.HBox?>
<?import javafx.scene.layout.VBox?>
<?import javafx.scene.text.Font?>

<VBox spacing="5.0" style="-fx-background-color: #2E3348 #2E3348;" xmlns="http://javafx.com/javafx/11.0.1" xmlns:fx="http://javafx.com/fxml/1" fx:controller="sample.contollers.ServiceController">
   <children>
      <HBox alignment="CENTER" spacing="10.0">
         <children>
            <Label text="Сортировка" textFill="WHITE">
               <font>
                  <Font name="System Bold" size="14.0" />
               </font>
            </Label>
            <Button fx:id="sortByCost" mnemonicParsing="false" style="-fx-background-color: #F39C63;" text="по стоимости" textFill="#fdfdfd">
               <font>
                  <Font size="14.0" />
               </font>
            </Button>
            <Button fx:id="sortBySale" mnemonicParsing="false" style="-fx-background-color: #F39C63;" text="по скидкам" textFill="WHITE">
               <font>
                  <Font size="14.0" />
               </font>
            </Button>
            <TextField fx:id="sortByName" promptText="поиск по названию">
               <font>
                  <Font size="14.0" />
               </font>
            </TextField>
            <Button fx:id="refresh" mnemonicParsing="false" style="-fx-background-color: #F39C63;" text="Обновить" textFill="WHITE">
               <font>
                  <Font size="14.0" />
               </font>
            </Button>
         </children>
         <padding>
            <Insets bottom="5.0" left="5.0" right="5.0" top="5.0" />
         </padding>
      </HBox>
      <ScrollPane fitToWidth="true" maxHeight="-Infinity" maxWidth="-Infinity" minHeight="-Infinity" minWidth="-Infinity" prefHeight="600.0" prefWidth="600.0">
         <content>
            <VBox fx:id="formVBox" alignment="CENTER" spacing="5.0" />
         </content>
      </ScrollPane>
   </children>
   <padding>
      <Insets bottom="5.0" left="5.0" right="5.0" top="5.0" />
   </padding>
</VBox>
